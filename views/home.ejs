<section class="articles">
    <h2 class="articles__heading">
        Latest Posts
    </h2>

    <ul class="article-ul">
        <% data.forEach(post=> { %>
            <li>
                <a href="/allPost/<%=post._id%>">
                    <span>
                        <%=post.title %>
                    </span>
                    <span class="article-list__date">
                        <%= post.timestamps.toDateString() %>
                    </span>
                </a>
            </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
</section>
